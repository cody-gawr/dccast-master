<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_focused="true">
        <shape android:shape="oval">
            <solid android:color="@color/colorFav" />
        </shape>
    </item>
    <!--Space is the next space for character input -->
    <item android:state_focused="true" android:state_selected="true">
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="@color/colorFav" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>
    <!--Space contains text and not focused -->
    <item android:state_checked="true" android:state_focused="false">
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="@color/colorFav" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>
    <!-- PinEntryEditText is focused -->
    <item android:state_focused="true">
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="@color/colorFav" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>
    <!-- PinEntryEditText is not focused -->
    <item>
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="@color/colorFav" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>

</selector>