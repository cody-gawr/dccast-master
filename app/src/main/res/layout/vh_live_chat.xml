<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="start"
      android:orientation="horizontal"
      android:paddingLeft="@dimen/margin_size_xxlarge"
      android:paddingTop="@dimen/margin_size_medium"
      android:paddingRight="@dimen/margin_size_xxlarge"
      android:paddingBottom="@dimen/margin_size_medium">

    <LinearLayout
        android:id="@+id/wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/chat_text_background"
        android:paddingTop="@dimen/margin_size_small"
        android:paddingBottom="@dimen/margin_size_small"
        android:paddingLeft="@dimen/margin_size_medium"
        android:paddingRight="@dimen/margin_size_medium">

      <TextView
          android:id="@+id/user"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="@dimen/margin_size_medium"
          android:text=""
          android:textColor="@android:color/black"
          android:layout_gravity="top|start"/>

      <TextView
          android:id="@+id/text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@android:color/black"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/sticker"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        android:visibility="gone"
        tools:ignore="ContentDescription"/>

  </LinearLayout>

</layout>