<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      tools:context=".screens.navigation_menu.settings.ActivityOpenSource">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

      <include
          android:id="@+id/header"
          layout="@layout/layout_back_header"/>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

      <LinearLayout android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingLeft="@dimen/margin_size_xxlarge"
          android:paddingTop="@dimen/margin_size_xlarge"
          android:paddingRight="@dimen/margin_size_xxlarge"
          android:paddingBottom="@dimen/margin_size_xlarge"
          android:orientation="vertical">

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="@string/contact_us_title"
            android:textColor="@color/black"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            tools:text="2019/06/11 09:15"
            android:id="@+id/title"
            android:layout_marginTop="@dimen/margin_size_medium"
            android:textColor="@color/black"/>

      </LinearLayout>

      <View android:layout_width="match_parent" android:layout_height="0.1dp"
          android:background="@color/line_button"/>

      <LinearLayout android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingLeft="@dimen/margin_size_xxlarge"
          android:paddingTop="@dimen/margin_size_xlarge"
          android:paddingRight="@dimen/margin_size_xxlarge"
          android:paddingBottom="@dimen/margin_size_xlarge"
          android:orientation="vertical">

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="@string/contact_us_type"
            android:textColor="@color/black"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            tools:text="2019/06/11 09:15"
            android:id="@+id/type"
            android:layout_marginTop="@dimen/margin_size_medium"
            android:textColor="@color/black"/>

      </LinearLayout>

      <View android:layout_width="match_parent" android:layout_height="0.1dp"
          android:background="@color/line_button"/>

      <LinearLayout android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingLeft="@dimen/margin_size_xxlarge"
          android:paddingTop="@dimen/margin_size_xlarge"
          android:paddingRight="@dimen/margin_size_xxlarge"
          android:paddingBottom="@dimen/margin_size_xlarge"
          android:orientation="vertical">

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="@string/contact_us_contact_date"
            android:textColor="@color/black"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            tools:text="2019/06/11 09:15"
            android:id="@+id/contact_date"
            android:layout_marginTop="@dimen/margin_size_medium"
            android:textColor="@color/black"/>

      </LinearLayout>

      <View android:layout_width="match_parent" android:layout_height="0.1dp"
          android:background="@color/line_button"/>

      <LinearLayout android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingLeft="@dimen/margin_size_xxlarge"
          android:paddingTop="@dimen/margin_size_xlarge"
          android:paddingRight="@dimen/margin_size_xxlarge"
          android:paddingBottom="@dimen/margin_size_xlarge"
          android:orientation="vertical">

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="@string/contact_us_status"
            android:textColor="@color/black"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            tools:text="2019/06/11 09:15"
            android:id="@+id/status"
            android:layout_marginTop="@dimen/margin_size_medium"
            android:textColor="@color/black"/>

      </LinearLayout>

      <View android:layout_width="match_parent" android:layout_height="0.1dp"
          android:background="@color/line_button"/>

      <LinearLayout android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingLeft="@dimen/margin_size_xxlarge"
          android:paddingTop="@dimen/margin_size_xlarge"
          android:paddingRight="@dimen/margin_size_xxlarge"
          android:paddingBottom="@dimen/margin_size_xlarge"
          android:orientation="vertical">

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="@string/contact_us_information"
            android:textColor="@color/black"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            tools:text="2019/06/11 09:15"
            android:id="@+id/information"
            android:layout_marginTop="@dimen/margin_size_medium"
            android:textColor="@color/black"/>

      </LinearLayout>

      <View android:layout_width="match_parent" android:layout_height="0.1dp"
          android:background="@color/line_button"/>

      <LinearLayout android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingLeft="@dimen/margin_size_xxlarge"
          android:paddingTop="@dimen/margin_size_xlarge"
          android:paddingRight="@dimen/margin_size_xxlarge"
          android:paddingBottom="@dimen/margin_size_xlarge"
          android:orientation="vertical">

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="@string/contact_us_answer"
            android:textColor="@color/black"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/answer"
            android:text="@string/not_answered"
            android:layout_marginTop="@dimen/margin_size_medium"
            android:textColor="@color/black"/>

      </LinearLayout>

      <View android:layout_width="match_parent" android:layout_height="0.1dp"
          android:background="@color/line_button"/>

    </LinearLayout>

  </LinearLayout>

</layout>