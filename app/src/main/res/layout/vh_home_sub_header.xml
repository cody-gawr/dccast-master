<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <View
          android:layout_width="match_parent"
          android:layout_height="0.2dp"
          android:background="@color/colorGrey"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/tab_height"
          android:layout_marginBottom="@dimen/margin_size_medium"
          android:orientation="horizontal"
          >

        <TextView
            android:id="@+id/videos_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="start"
            android:paddingLeft="@dimen/margin_size_xlarge"
            android:paddingStart="@dimen/margin_size_xlarge"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_size_medium"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry"
            />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingEnd="@dimen/margin_size_xlarge"
            android:paddingRight="@dimen/margin_size_xlarge"
            tools:ignore="RtlSymmetry"
            >

          <TextView
              android:id="@+id/btn_see_all"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_gravity="right"
              android:layout_marginRight="@dimen/margin_size_medium"
              android:background="?selectableItemBackground"
              android:clickable="true"
              android:focusable="true"
              android:gravity="center_vertical"
              android:paddingLeft="@dimen/margin_size_medium"
              android:paddingRight="@dimen/margin_size_medium"
              android:text="@string/home_see_all"
              android:textColor="@color/colorGrey"
              android:textSize="@dimen/font_size_medium"
              tools:ignore="RtlHardcoded,RtlSymmetry"
              />

        </FrameLayout>

      </LinearLayout>

    </LinearLayout>

  </FrameLayout>

</layout>