<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/margin_size_xxxxlarge">

  <TextView
      android:id="@+id/dialog_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="@string/live_settings_verified_success"
      android:textColor="@color/colorFav"
      android:textStyle="bold"/>

  <TextView
      android:id="@+id/go_to_video"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:layout_marginTop="@dimen/margin_size_xxlarge"
      android:text="@string/go_to_video"
      android:textColor="@color/colorPrimary"
      android:visibility="gone"
      android:textStyle="bold"/>

  <com.airbnb.lottie.LottieAnimationView
      android:id="@+id/success_animation"
      android:layout_width="106dp"
      android:layout_height="90dp"
      android:layout_marginTop="@dimen/margin_size_xxlarge"
      android:layout_gravity="center"
      app:lottie_autoPlay="false"
      app:lottie_fileName="success.json"
      app:lottie_loop="false"
  />

</LinearLayout>