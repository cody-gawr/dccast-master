<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorNavigationDrawerBackground"
        android:orientation="vertical"
        tools:ignore="UnusedAttribute"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="96dp"
          android:orientation="horizontal"
          >

        <FrameLayout
            android:id="@+id/item_home_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            >

          <LinearLayout
              android:id="@+id/item_home"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?selectableItemBackground"
              android:clickable="true"
              android:focusable="true"
              android:foreground="?selectableItemBackground"
              android:gravity="center"
              android:orientation="vertical"
              >

            <ImageView
                android:id="@+id/img_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_left_menu_home"
                android:tint="#383A40"
                android:visibility="gone"
                tools:ignore="ContentDescription"
                />

            <ImageView
                android:id="@+id/img_home_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_left_menu_home"
                android:tint="@color/colorPrimary"
                android:visibility="visible"
                tools:ignore="ContentDescription"
                />

            <TextView
                android:id="@+id/home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_size_small"
                android:text="@string/left_menu_title_0"
                android:textColor="#383A40"
                />

          </LinearLayout>

        </FrameLayout>

        <Space
            android:layout_width="@dimen/divider_size"
            android:layout_height="match_parent"
            />

        <FrameLayout
            android:id="@+id/item_my_content_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            >

          <LinearLayout
              android:id="@+id/item_my_content"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?selectableItemBackground"
              android:clickable="true"
              android:focusable="true"
              android:foreground="?selectableItemBackground"
              android:gravity="center"
              android:orientation="vertical"
              >

            <ImageView
                android:id="@+id/img_my_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_channel"
                android:tint="#383A40"
                android:visibility="visible"
                tools:ignore="ContentDescription"
                />

            <ImageView
                android:id="@+id/img_my_content_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_channel"
                android:tint="@color/colorPrimary"
                android:visibility="gone"
                tools:ignore="ContentDescription"
                />

            <TextView
                android:id="@+id/my_content_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_size_small"
                android:text="@string/left_menu_title_1"
                android:textColor="#383A40"
                />

          </LinearLayout>

        </FrameLayout>

      </LinearLayout>

      <Space
          android:layout_width="match_parent"
          android:layout_height="@dimen/divider_size"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="96dp"
          android:orientation="horizontal"
          >

        <FrameLayout
            android:id="@+id/item_favorite_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            >

          <LinearLayout
              android:id="@+id/item_favorite"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?selectableItemBackground"
              android:clickable="true"
              android:focusable="true"
              android:foreground="?selectableItemBackground"
              android:gravity="center"
              android:orientation="vertical"
              >

            <ImageView
                android:id="@+id/img_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_favorite"
                android:tint="#383A40"
                android:visibility="visible"
                tools:ignore="ContentDescription"
                />

            <ImageView
                android:id="@+id/img_favorite_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_favorite"
                android:tint="@color/colorPrimary"
                android:visibility="gone"
                tools:ignore="ContentDescription"
                />

            <TextView
                android:id="@+id/favorite_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_size_small"
                android:text="@string/left_menu_title_4"
                android:textColor="#383A40"
                />

          </LinearLayout>

        </FrameLayout>

        <Space
            android:layout_width="@dimen/divider_size"
            android:layout_height="match_parent"
            />

        <FrameLayout
            android:id="@+id/item_cast_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            >

          <LinearLayout
              android:id="@+id/item_cast"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?selectableItemBackground"
              android:clickable="true"
              android:focusable="true"
              android:foreground="?selectableItemBackground"
              android:gravity="center"
              android:orientation="vertical"
              >

            <ImageView
                android:id="@+id/img_cast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_cast_list"
                android:tint="#383A40"
                android:visibility="visible"
                tools:ignore="ContentDescription"
                />

            <ImageView
                android:id="@+id/img_cast_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_cast_list"
                android:tint="@color/colorPrimary"
                android:visibility="gone"
                tools:ignore="ContentDescription"
            />

            <TextView
                android:id="@+id/cast_list_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_size_small"
                android:text="@string/left_menu_title_5"
                android:textColor="#383A40"
                />

          </LinearLayout>

        </FrameLayout>

      </LinearLayout>

    </LinearLayout>

  </androidx.cardview.widget.CardView>

</layout>
