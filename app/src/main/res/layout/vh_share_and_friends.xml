<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
>

  <LinearLayout
      android:id="@+id/container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingTop="@dimen/margin_size_large"
      android:paddingBottom="@dimen/margin_size_large"
      android:paddingLeft="@dimen/margin_size_large"
      android:paddingRight="@dimen/margin_size_large"
  >

    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="25dp"
    >

      <ImageView
          android:id="@+id/img"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="centerInside"
          android:src="@drawable/ic_profile_placeholder"
          tools:ignore="ContentDescription"
      />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_size_medium"
        tools:text="profile name"
        android:textColor="@android:color/black"
    />

  </LinearLayout>

</layout>
